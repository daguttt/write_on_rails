<main class="grid content-center max-w-sm mx-auto p-4 main-min-h">
  <h2 class="text-4xl mb-4">Register</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4 max-w-sm" }) do |f| %>
    <%= render "partials/flash" %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div>
      <%= f.label :name, class: "block text-sm font-medium mb-2 dark:text-white" %>
      <%= f.email_field :name, autofocus: true, class: "py-3 px-4 block w-full border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-900 dark:border-neutral-700 dark:text-neutral-400 dark:placeholder-neutral-500 dark:focus:ring-neutral-600" %>
    </div>

    <div>
      <%= f.label :email, class: "block text-sm font-medium mb-2 dark:text-white" %>
      <%= f.email_field :email, autocomplete: "email", class: "py-3 px-4 block w-full border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-900 dark:border-neutral-700 dark:text-neutral-400 dark:placeholder-neutral-500 dark:focus:ring-neutral-600" %>
    </div>

    <div>
      <%= f.label :password, class: "text-sm font-medium mb-2 dark:text-white" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "py-3 px-4 block w-full border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-900 dark:border-neutral-700 dark:text-neutral-400 dark:placeholder-neutral-500 dark:focus:ring-neutral-600" %>
      <% if @minimum_password_length %>
        <span class="text-xs text-gray-500 dark:text-gray-100">(<%= @minimum_password_length %> caracteres mÃ­nimo)</span>
      <% end %>
    </div>

    <div>
      <%= f.label :password_confirmation, class: "text-sm font-medium mb-2 dark:text-white" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "py-3 px-4 block w-full border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-900 dark:border-neutral-700 dark:text-neutral-400 dark:placeholder-neutral-500 dark:focus:ring-neutral-600" %>
    </div>

    <%= f.submit "Sign up", class: "py-3 px-4 w-full max-w-sm inline-flex items-center gap-x-2 text-sm font-medium rounded-lg border border-transparent bg-blue-600 text-white hover:bg-blue-700 focus:outline-none focus:bg-blue-700 disabled:opacity-50 disabled:pointer-events-none" %>

    <%- if controller_name != 'sessions' %>
      <span class="text-sm text-center block">
        Already have an account?
        <%= link_to "Sign in", new_session_path(resource_name), class: "text-blue-600 hover:underline" %>
      </span>
    <% end %>
  <% end %>
</main>
