<div id="<%= dom_id post %>">
  <section>
    <%= link_to root_path, class: "inline-flex items-center gap-x-1 text-sm text-gray-800 hover:text-blue-600 focus:outline-none focus:text-blue-600 dark:text-neutral-200 dark:hover:text-blue-500 dark:focus:text-blue-500" do %>
      <svg class="shrink-0 size-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m15 18-6-6 6-6" /></svg>
      Back to posts
    <% end %>
    <h2 class="text-2xl"><%= post.title %></h2>
    <p class="my-5">
      <strong class="block font-medium mb-1">Content:</strong>
      <%= post.content %>
    </p>
    <p class="my-5">
      <strong class="block font-medium mb-1">Status:</strong>
      <%= post.status %>
    </p>
    <p class="my-5">
      <strong class="block font-medium mb-1">Published at:</strong>
      <%= post.published_at %>
    </p>
    <p class="my-5">
      <strong class="block font-medium mb-1">User:</strong>
      <%= post.user_id %>
    </p>
    <p class="my-5">
      <strong class="block font-medium mb-1">Category:</strong>
      <%= post.category_id %>
    </p>
  </section>
  <section>
    <h3 class="text-2xl">Comments</h3>
    <% if post.comments.any? %>
      <div class="grid gap-4">
        <% post.comments.each do |comment| %>
          <div>
            <p class="grid gap-2 bg-gray-100 border border-gray-200 text-gray-800 rounded-lg p-4 md:p-5 dark:bg-white/10 dark:border-white/20 dark:text-white">
              <strong><%= comment.text %></strong>
              <span class="text-sm text-gray-500">by <%= comment.user.name %></span>
            </p>
          </div>
        <% end %>
      </div>
    <% else %>
      <p>No comments yet.</p>
    <% end %>

    <% if current_user.present? %>
      <%= render "comments/create_form", post: post %>
    <% else %>
      <p>Sign in to leave a comment.</p>
    <% end %>
  </section>
</div>
