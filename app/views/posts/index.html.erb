<main class="container mx-auto p-4">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Posts" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Posts</h1>
    <%= link_to "New post", new_post_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <%= form_with url: posts_path, method: :get do |form| %>
    <div class="flex gap-2 mt-2 items-center shadow rounded-md py-2 px-3 border border-gray-400 overflow-hidden">
      <%= form.search_field :s, class: "border-none px-3 py-2 w-full focus:outline-none" %>
      <svg xmlns="http://www.w3.org/2000/svg" class="size-6" viewBox="0 0 24 24"><g fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"><circle cx="11" cy="11" r="8" /><path d="m21 21l-4.3-4.3" /></g></svg>
    </div>
  <% end %>

  <div id="posts" class="min-w-full grid gap-6 mt-4">
    <% if @posts.any? %>
      <% @posts.each do |post| %>
        <%= render "posts/post_card", post: post %>
      <% end %>
    <% else %>
      <p>No posts yet...</p>
    <% end %>
  </div>
</main>
